# Required: Gemini API key (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: GeminiMesh API (for /update_agent_prompt_geminimesh)
GEMINIMESH_API_URL=https://api.geminimesh.com/api
GEMINIMESH_API_TOKEN=
# Timeout in seconds for POST to GeminiMesh (default 90; increase if backend is slow)
GEMINIMESH_REQUEST_TIMEOUT=90

# Optional: Server
HOST=127.0.0.1
PORT=8000

# Optional: Per-agent RAG data directory
DATA_FOLDER=data
